{
  "format_on_save": "on",
  "tab_size": 2,
  "hard_tabs": false,
  "show_whitespaces": "selection",
  "preferred_line_length": 120,
  "wrap_guides": [80, 120],
  "show_wrap_guides": true,
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware"
  },

  "terminal": {
    "shell": {
      "program": "/bin/zsh"
    },
    "font_size": 13,
    "line_height": "comfortable",
    "blinking": "terminal_controlled",
    "alternate_scroll": "on",
    "copy_on_select": false,
    "dock": "bottom",
    "default_height": 320,
    "working_directory": "current_project_directory"
  },

  "git": {
    "inline_blame": {
      "enabled": true,
      "min_column": 80
    },
    "git_gutter": "tracked_files",
    "gutter_debounce": 100
  },

  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "prettier",
      "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true
      },
      "tab_size": 2
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    },
    "TSX": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    },
    "SCSS": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    },
    "CSS": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    },
    "Markdown": {
      "format_on_save": "off",
      "wrap_guides": [80],
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length"
    }
  },

  "file_types": {
    "**/.github/chatmodes/*.md": ["markdown"],
    "**/schemas/*.ts": ["typescript"],
    "epic-config.json": ["json"],
    "**/*.epic.tsx": ["tsx"],
    "**/*.atomic.tsx": ["tsx"],
    "**/*.molecular.tsx": ["tsx"],
    "**/*.organism.tsx": ["tsx"],
    "**/GIT_*.md": ["markdown"],
    "**/EPIC_*.md": ["markdown"],
    "**/*.styles.module.scss": ["scss"],
    "CLAUDE.md": ["markdown"],
    "**/git-generated/*.md": ["markdown"],
    "**/ai-context/*.ts": ["typescript"],
    "**/*opencode*.ts": ["typescript"]
  },

  "ai_integration": {
    "context_provider": "./scripts/ai-context/context-provider.ts",
    "git_documentation": "./scripts/git-docs/orchestrator.sh",
    "epic_management": "./scripts/epic-tools/epic",
    "opencode_delegation": "./components/scripts/opencode-delegate.ts"
  },

  "workspace_utilities": {
    "git_docs_monitor": "./scripts/git-docs/monitor-changes.sh",
    "breaking_change_detector": "./scripts/git-docs/breaking-change-detector.sh",
    "visual_test_integration": "./scripts/git-docs/visual-test-docs.sh",
    "performance_tracker": "./scripts/perf/",
    "source_attribution": "./scripts/git-docs/source-attribution.sh"
  },

  "project_panel": {
    "dock": "left",
    "default_width": 280,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 15
  },

  "outline_panel": {
    "dock": "right",
    "default_width": 300,
    "auto_fold_dirs": true,
    "auto_reveal_entries": true
  },

  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  "cursor_blink": false,
  "hover_popover_enabled": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "use_on_type_format": true,

  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": true
  },

  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_line_height": "comfortable"
}
