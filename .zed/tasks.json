      },
      "tags": ["production", "server"]
    },
    {
      "label": "âœ¨ Clean & Install",
      "command": "sh",
      "args": ["-c", "rm -rf node_modules bun.lock .next && bun install"],
      "use_new_terminal": true,
      "tags": ["maintenance", "install"]
    },
    {
      "label": "ğŸ” Validate System",
      "command": "bun",
      "args": ["run", "validate"],
      "use_new_terminal": false,
      "tags": ["quality", "validation"]
    },
    {
      "label": "âš¡ Basic Validate",
      "command": "bun",
      "args": ["run", "lint", "--quiet"],
      "use_new_terminal": false,
      "tags": ["quality", "validation", "basic"]
    },
    {
      "label": "ğŸ”§ Fix Critical Syntax",
      "command": "bun",
      "args": ["scripts/fix-specific-syntax.ts"],
      "use_new_terminal": false,
      "tags": ["quality", "fix", "critical"]
    },
    {
      "label": "ğŸ”§ Repair Corrupted Files",
      "command": "sh",
      "args": [
        "-c",
        "git checkout HEAD -- scripts/validate-quick.ts scripts/fix-*.ts"
      ],
      "use_new_terminal": false,
      "tags": ["recovery", "repair"]
    },
    {
      "label": "ğŸ”§ Check Syntax Errors",
      "command": "bun",
      "args": ["run", "typecheck", "--noEmit", "--skipLibCheck"],
      "use_new_terminal": false,
      "tags": ["quality", "check", "typescript"]
    },
    {
      "label": "ğŸš€ Demo Integration",
      "command": "bun",
