    {
      "label": "ğŸš€ Dev Server",
      "command": "bun",
      "args": ["run", "dev"],
      "use_new_terminal": true,
      "allow_concurrent_runs": false,
      "env": {
        "NODE_ENV": "development"
      },
      "tags": ["dev", "server"]
    },
    {
      "label": "ğŸš€ Dev Server (Skip Validation)",
