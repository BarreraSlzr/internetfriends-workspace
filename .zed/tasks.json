      "tags": ["security", "scan"]
    },
    {
      "label": "âš¡ Performance Test",
      "command": "bun",
      "args": ["run", "performance:test"],
      "use_new_terminal": true,
      "tags": ["performance", "test"]
    },
    {
      "label": "ğŸ“ˆ Benchmark",
      "command": "bun",
      "args": ["run", "benchmark"],
      "use_new_terminal": true,
      "tags": ["performance", "benchmark"]
    },
    {
      "label": "ğŸ”„ Schema Validate",
      "command": "bun",
      "args": ["run", "schema:validate"],
      "use_new_terminal": false,
      "tags": ["validation", "schema"]
    },
    {
      "label": "ğŸ“ Generate Schemas",
      "command": "bun",
      "args": ["run", "schema:generate"],
      "use_new_terminal": false,
      "tags": ["generate", "schema"]
    },
    {
      "label": "ğŸ” Integration Check",
      "command": "bun",
      "args": ["run", "integration:check"],
      "use_new_terminal": false,
      "tags": ["integration", "check"]
    },
    {
      "label": "ğŸ¤– Smart Commit",
      "command": "bun",
      "args": ["run", "smart:commit"],
      "use_new_terminal": true,
      "tags": ["git", "commit", "smart"]
    },
    {
      "label": "ğŸ“Š Monitor Events",
      "command": "bun",
      "args": ["run", "monitoring:events"],
      "use_new_terminal": true,
      "allow_concurrent_runs": true,
      "tags": ["monitoring", "events"]
    },
    {
      "label": "ğŸ’¾ Monitor Health",
      "command": "bun",
      "args": ["run", "monitoring:health"],
      "use_new_terminal": true,
      "allow_concurrent_runs": true,
      "tags": ["monitoring", "health"]
    },
    {
      "label": "ğŸ” File Structure",
      "command": "find",
      "args": [
        ".",
        "-name",
        "*.ts",
        "-o",
        "-name",
        "*.tsx",
        "|",
        "head",
        "-20"
      ],
      "use_new_terminal": false,
      "tags": ["explore", "basic"]
    },
    {
      "label": "ğŸ“‹ Quick Status",
      "command": "sh",
      "args": [
        "-c",
        "echo 'TypeScript files:' && find . -name '*.ts' -o -name '*.tsx' | wc -l && echo 'Errors:' && bun run lint --quiet --format compact | wc -l"
      ],
      "use_new_terminal": false,
      "tags": ["status", "quick"]
    },
    {
      "label": "ğŸš¨ Recovery Mode",
      "command": "sh",
      "args": [
        "-c",
        "git status && echo '--- Checking for corrupted files ---' && bun run typecheck 2>&1 | head -10"
      ],
      "use_new_terminal": true,
      "tags": ["recovery", "debug"]
    }
  ]
}