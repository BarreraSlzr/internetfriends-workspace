# InternetFriends Workspace Environment Variables

# Vercel AI Gateway Environment Configuration - FREE TIER OPTIMIZED
# Required: Your Vercel account token (get from vercel.com/account/tokens)
VERCEL_TOKEN=your-vercel-token-here

# Optional: Specific team ID (will use personal account if not specified)
VERCEL_TEAM_ID=your-team-id-here

# Optional: AI Gateway API Key
VERCEL_AI_GATEWAY_API_KEY=your-gateway-api-key-here

# Optional: Gateway URL (will be auto-generated if not specified)
VERCEL_AI_GATEWAY_URL=https://gateway.vercel.app/your-team-id

# Tier configuration (free, pro, enterprise)
VERCEL_TIER=free

# Free tier optimized settings
# Refresh interval in minutes (45min for free tier to reduce API calls)
VERCEL_AUTH_REFRESH_INTERVAL=45

# Rate limiting for free tier (conservative estimates)
VERCEL_DAILY_REQUEST_LIMIT=1000
VERCEL_MINUTE_REQUEST_LIMIT=20

# Cerebras API Configuration (fallback)
OPENAI_API_KEY=csk-*

# GitHub Configuration
GITHUB_TOKEN=your-github-token-here

# Development
NODE_ENV=development

# Database (for future use)
DATABASE_URL=your-database-url-here

# G's Payment System Configuration
# PayPal (Primary - Lowest User Friction)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Stripe (Secondary - Credit Cards + OXXO for Mexico)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Mercado Pago (Mexican Market Leader)
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-key
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-token
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Gumroad (Creator-Friendly Backup)
GUMROAD_API_KEY=your-gumroad-api-key
GUMROAD_WEBHOOK_SECRET=your-gumroad-webhook-secret

# Resico (Mexican Tax Compliance)
RESICO_API_KEY=your-resico-api-key
RESICO_WEBHOOK_SECRET=your-resico-webhook-secret
RESICO_ENVIRONMENT=sandbox # or production

# Payment Configuration
PAYMENT_DEFAULT_CURRENCY=USD
PAYMENT_ENABLE_CASH_METHODS=true
PAYMENT_MEXICAN_TAX_THRESHOLD=2000 # MXN amount requiring invoice

# Porkbun Domain API Configuration
# Required for domain marketplace integration
# Get these from: https://porkbun.com/account/api
PORKBUN_API_KEY=your-porkbun-api-key-here
PORKBUN_SECRET_API_KEY=your-porkbun-secret-api-key-here

# Google Analytics Configuration  
# Required for link redirection analytics
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_PROPERTY_ID=your-ga-property-id-here

# Domain Marketplace Configuration
DOMAIN_MARKETPLACE_ENABLED=true
DOMAIN_ESCROW_ENABLED=true
DOMAIN_ANALYTICS_ENABLED=true
