# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ERROR_REPORTING=false

# Custom Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_I18N=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Experimental Features
NEXT_PUBLIC_ENABLE_REACT_FLOW=true
NEXT_PUBLIC_ENABLE_MERMAID=true
NEXT_PUBLIC_ENABLE_WEBSOCKETS=false

# Development Features
NEXT_PUBLIC_DEV_TOOLS=true
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_HOT_RELOAD_DEBUG=false

# Glass Overlay Feature Flag
NEXT_PUBLIC_GLASS_OVERLAY_ENABLED=false

# =============================================================================
# EVENT SYSTEM
# =============================================================================

# Event-Driven Architecture
NEXT_PUBLIC_EVENT_SYSTEM_ENABLED=true
EVENT_SYSTEM_LOG_LEVEL=info
EVENT_SYSTEM_MAX_LISTENERS=100

# Compute Events
NEXT_PUBLIC_COMPUTE_EVENTS_ENABLED=true
COMPUTE_EVENTS_BATCH_SIZE=10
COMPUTE_EVENTS_TIMEOUT=5000

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60000

# CORS Settings
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode Settings
DEV_SHOW_COMPONENT_BOUNDARIES=false
DEV_ENABLE_PERFORMANCE_METRICS=true
DEV_LOG_LEVEL=info

# Testing Configuration
TEST_ENVIRONMENT=development
TEST_TIMEOUT=30000
E2E_BASE_URL=http://localhost:3000

# Playwright Testing
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium

# =============================================================================
# BUILD & DEPLOYMENT
# =============================================================================

# Build Configuration
BUILD_ANALYZE=false
BUILD_STANDALONE=false
BUILD_STATIC_EXPORT=false

# Deployment
DEPLOYMENT_PLATFORM=local
DEPLOYMENT_BRANCH=main

# CDN & Assets
# NEXT_PUBLIC_CDN_URL=https://your-cdn.com
# NEXT_PUBLIC_ASSETS_URL=https://your-assets.com

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Application Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false

# Debug Settings
DEBUG_ENABLED=false
DEBUG_COMPONENTS=false
DEBUG_API=false
DEBUG_EVENTS=false

# =============================================================================
