# InternetFriends Production Landing - Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# VERCEL AI GATEWAY - FREE TIER OPTIMIZED
# =============================================================================

# Required: Your Vercel account token (get from vercel.com/account/tokens)
VERCEL_TOKEN=your-vercel-token-here

# Optional: Specific team ID (will use personal account if not specified)
VERCEL_TEAM_ID=your-team-id-here

# Optional: AI Gateway API Key
VERCEL_AI_GATEWAY_API_KEY=your-gateway-api-key-here

# Optional: Gateway URL (will be auto-generated if not specified)
VERCEL_AI_GATEWAY_URL=https://gateway.vercel.app/your-team-id

# Tier configuration (free, pro, enterprise)
VERCEL_TIER=free

# Free tier optimized settings
# Refresh interval in minutes (45min for free tier to reduce API calls)
VERCEL_AUTH_REFRESH_INTERVAL=45

# Rate limiting for free tier (conservative estimates)
VERCEL_DAILY_REQUEST_LIMIT=1000
VERCEL_MINUTE_REQUEST_LIMIT=20

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Server Configuration
PORT=3000
HOSTNAME=localhost
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# API Keys (Fallback - Gateway takes priority)
OPENAI_API_KEY=sk-your-openai-key-or-gateway-token
ANTHROPIC_API_KEY=your-anthropic-key

# GitHub OAuth (if using GitHub auth)
GITHUB_TOKEN=your-github-token-here
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# ORCHESTRATOR SYSTEM
# =============================================================================

# Orchestrator Dashboard
NEXT_PUBLIC_ORCHESTRATOR_ENABLED=true
NEXT_PUBLIC_ORCHESTRATOR_URL=http://localhost:3000/(internetfriends)/orchestrator

# System Monitoring
NEXT_PUBLIC_SYSTEM_MONITORING_ENABLED=true
NEXT_PUBLIC_SYSTEM_API_URL=http://localhost:3000/api/system

# WebSocket Configuration (for real-time monitoring)
NEXT_PUBLIC_WS_ENABLED=false
NEXT_PUBLIC_WS_URL=ws://localhost:3000/api/ws

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# PostgreSQL (Vercel Postgres or local)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# POSTGRES_URL=postgresql://username:password@localhost:5432/database_name
# POSTGRES_PRISMA_URL=postgresql://username:password@localhost:5432/database_name?pgbouncer=true&connect_timeout=15
# POSTGRES_URL_NON_POOLING=postgresql://username:password@localhost:5432/database_name

